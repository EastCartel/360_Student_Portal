@model GurantorViewModel


@{
    ViewBag.Title = "Create Guarrantor";
}



<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><i class="fa fa-cog"></i> Dashboard <small>Manage Your Student</small></h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a type="button" data-toggle="modal" data-target="#addPage">Add Page</a></li>
                        <li><a href="#">Add Post</a></li>
                        <li><a href="#">Add User</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>
<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a asp-action="Index" asp-controller="Home" class="list-group-item active main-color-bg">
                        <i class="fa fa-user"></i> Student
                    </a>
                    <a asp-action="Create" asp-controller="Home" class="list-group-item"><i class="fa fa-user-edit"></i> Create</a>
                    <a href="#" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Posts <span class="badge">33</span></a>
                    <a href="#" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <span class="badge">203</span></a>
                </div>

                <div class="well">
                    <h4>Disk Space Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            60%
                        </div>
                    </div>
                    <h4>Bandwidth Used </h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                            40%
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <!-- Website Overview -->
                <div class="card mt-4 mr-2 ml-2 mb-3 col-lg-8 col-md-9 mx-auto shadow">
                    <form enctype="multipart/form-data" asp-controller="Home" asp-action="GuarantorCreate" method="post">
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="StudentId" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="StudentId" disabled class="form-control" placeholder="Name" />
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="GurantorName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="GurantorName" class="form-control" placeholder="Name" />
                                <span asp-validation-for="GurantorName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="GurantorEmail" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="GurantorEmail" class="form-control" placeholder="Email" />
                                <span asp-validation-for="GurantorEmail" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="Gender" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-control" asp-for="Gender"
                                        asp-items="Html.GetEnumSelectList<Gender>()">
                                    <option value="">Please Select</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="Address" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="HomePhone" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="HomePhone" class="form-control" placeholder="Home Phone" />
                                <span asp-validation-for="HomePhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="OfficePhone" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="OfficePhone" class="form-control" placeholder="Office Number" />
                                <span asp-validation-for="OfficePhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3 mr-3 ml-2 mb-3">
                            <label asp-for="CompanyName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        @*<div class="form-group row mt-3 mr-3 ml-2 mb-3">
                                <label asp-for="Photo" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <div class="custom-file">
                                        <input asp-for="Photo" class="form-control custom-file-input">
                                        <label class="custom-file-label">Choose File....</label>
                                    </div>
                                </div>
                            </div>*@
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <button type="submit" class="btn btn-primary mt-3 mr-3 ml-3 mb-3">Add</button>
                        </div>

                        @section Scripts{
                            <script>
                                $(document).ready(function () {
                                    $('.custom-file-input').on("change", function () {
                                        var fileName = $(this).val().split("\\").pop();
                                        $(this).next('.custom-file-label').html(fileName);
                                    })
                                })
                            </script>

                        }
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>